<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:attr/colorBackground">
    <TextView
        android:id="@+id/adminUsersTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Manage Users"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:id="@+id/adminUserControl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="@id/adminUsersTextView"
        app:layout_constraintBottom_toBottomOf="@id/adminUserBackButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:text="Add User"
        android:textStyle="bold"/>
        <EditText
        android:id="@+id/adminNewUserNameEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="text"/>
        <EditText
            android:id="@+id/adminNewUserPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/adminNewUserSecurityKeyEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Security Key"
            android:inputType="text"/>
        <Button
            android:id="@+id/adminAddUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add User"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="Delete User"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/adminDeleteUserNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username to Delete"
            android:inputType="text"/>
        <Button
            android:id="@+id/adminDeleteUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete User"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="Flag User"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/adminFlagUserNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username to Flag"
            android:inputType="text"/>
        <Button
            android:id="@+id/adminFlagUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Flag User"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:text="Unflag User"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/adminUnflagUserNameEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username to Unflag"
            android:inputType="text"/>
        <Button
            android:id="@+id/adminUnflagUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unflag User"/>
    </LinearLayout>
    <Button
        android:id="@+id/adminUserBackButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>